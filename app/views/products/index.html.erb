<p id="notice"><%= notice %></p>
<% if @products&.blank? %>
  <h6><%= "No Products in #{@store.name}" %></h6>
<% else %>
  <div class="show_page">
    <h3><u><%= @store.name %> Products</u></h3>
    <% @products.each do |product| %>
      <h6><b><%= link_to product.name, store_product_path(id: product.id, store_id: product.store_id) %></b></h6>
      <ul>
        <li><%= product.description %></li>
        <li><%= product.price %></li>
      </ul>
      <% if current_user.admin? %>
        <%= link_to 'New Product', new_store_product_path(store_id: params[:store_id]), class: 'btn btn-info btn-sm' %> | 
        <%= link_to 'Edit', edit_store_product_path(id: product.id, store_id: product.store_id), class: 'btn btn-warning btn-sm' %> | 
        <%= link_to 'Remove Product', store_product_path(id: product.id, store_id: product.store_id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
      <% end %>
      <hr>
    <% end %>
    <br>
    <br>
  </div>
<% end %>
