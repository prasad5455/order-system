<p id="notice"><%= notice %></p>

<div class="show_page">
  <h3><u>Categories</u></h3>
  <% @categories.each do |category| %>
    <h6><b><%= link_to category.name, category %></b></h6>
    <ul>
      <li><%= category.description %></li>
    </ul>
    <% if current_user.admin? %>
      <%= link_to 'Edit Category Details', edit_category_path(category), class: 'btn btn-warning btn-sm' %> | 
      <%= link_to 'Remove Category', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
    <% end %>
    <hr>
  <% end %>
  <%= link_to 'New Category', new_category_path, class: 'btn btn-info btn-sm' %>
  <br>
  <br>
</div>
