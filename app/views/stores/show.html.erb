<p id="notice"><%= notice %></p>
<div class="show_page">
  <ul>
    <h4>
      <%= @store.name %>
    </h4>
    <li>
      <div>
        <strong>Address:</strong>
        <br>
        <%= @store.address %>
      </div>
    </li>
    <li>
      <div>
        <strong>Contact:</strong>
        <br>
        <%= @store.contact %>
      </div>
    </li>
    <br>
    <br>
    <%= link_to 'Products', store_products_path(store_id: @store.id), class: 'btn btn-primary btn-sm' %>
    <% if current_user.admin? %>
       | <%= link_to 'Edit', edit_store_path(@store), class: 'btn btn-warning btn-sm' %> | 
      <%= link_to 'New Product', new_store_product_path(@store), class: 'btn btn-info btn-sm' %> | 
      <%= link_to 'Remove Store', @store, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
    <% end %>
  </ul>
</div>
